<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#272727"
    android:layout_marginBottom="1dp"
    app:cardBackgroundColor="@color/sometimes_use">

    <FrameLayout
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background_circle" />

        <TextView
            android:id="@+id/text_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M"
            android:textSize="25sp"
            android:layout_gravity="center"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_chat"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="start"
            android:layout_marginStart="8dp"
            android:text="name chat"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:layout_marginLeft="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp">

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingRight="8dp"
                    android:text="NIKITA:"
                    android:textColor="@color/main" />

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii"
                    android:maxEms="10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/main" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text=" - 22:13"
                    android:textColor="@color/main" />
            </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/new_messages_count"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/message_unread_background"
        android:gravity="center"
        android:text="99+"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>